{
  "name": "mcp-server-motherduck",
  "version": "0.8.0",
  "description": "Fast analytics and data processing with DuckDB and MotherDuck",
  "mcpServers": {
    "motherduck": {
      "command": "uvx",
      "args": [
        "mcp-server-motherduck@0.8.0",
        "--transport",
        "sse",
        "--port",
        "${PORT:-8000}",
        "--host",
        "0.0.0.0",
        "--db-path",
        "md:antm_hack"
      ],
      "env": {
        "motherduck_token": "${MOTHERDUCK_TOKEN}"
      }
    }
  },
  "environment": {
    "type": "uv",
    "python": ">=3.10"
  },
  "deployment": {
    "transport": "sse",
    "port": 8000,
    "host": "0.0.0.0"
  },
  "secrets": [
    "MOTHERDUCK_TOKEN"
  ],
  "configSchema": {
    "type": "object",
    "properties": {
      "PORT": {
        "type": "number",
        "description": "Port to listen on",
        "default": 8000
      }
    }
  }
}

